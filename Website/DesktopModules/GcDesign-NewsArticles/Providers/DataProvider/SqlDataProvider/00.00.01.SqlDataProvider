/****** Object:  StoredProcedure [dbo].[GcDesign_NewsArticles_DeleteArticle]    Script Date: 04/19/2015 21:16:00 ******/
SET ANSI_NULLS ON
GO
SET QUOTED_IDENTIFIER ON
GO
IF NOT EXISTS ( SELECT  *
                FROM    sys.objects
                WHERE   object_id = OBJECT_ID(N'[dbo].[GcDesign_NewsArticles_DeleteArticle]')
                        AND type IN ( N'P', N'PC' ) )
    BEGIN
        EXEC dbo.sp_executesql @statement = N'CREATE PROCEDURE [dbo].[GcDesign_NewsArticles_DeleteArticle]
	@ArticleID [int]
WITH EXECUTE AS CALLER
AS
DELETE FROM 
	dbo.GcDesign_NewsArticles_CustomValue
WHERE
	[ArticleID] = @ArticleID

DELETE FROM 
	dbo.GcDesign_NewsArticles_Image
WHERE
	[ArticleID] = @ArticleID

DELETE FROM 
	dbo.GcDesign_NewsArticles_File
WHERE
	[ArticleID] = @ArticleID

DELETE FROM dbo.GcDesign_NewsArticles_ArticleCategories
WHERE
	[ArticleID] = @ArticleID

DELETE FROM dbo.GcDesign_NewsArticles_Article
WHERE
	[ArticleID] = @ArticleID' 
    END
GO
/****** Object:  StoredProcedure [dbo].[GcDesign_NewsArticles_AddComment]    Script Date: 04/19/2015 21:16:00 ******/
SET ANSI_NULLS ON
GO
SET QUOTED_IDENTIFIER ON
GO
IF NOT EXISTS ( SELECT  *
                FROM    sys.objects
                WHERE   object_id = OBJECT_ID(N'[dbo].[GcDesign_NewsArticles_AddComment]')
                        AND type IN ( N'P', N'PC' ) )
    BEGIN
        EXEC dbo.sp_executesql @statement = N'CREATE PROCEDURE [dbo].[GcDesign_NewsArticles_AddComment]
	@ArticleID [int],
	@CreatedDate [datetime],
	@UserID [int],
	@Comment [ntext],
	@RemoteAddress [nvarchar](50),
	@Type [int],
	@TrackbackUrl [nvarchar](255),
	@TrackbackTitle [nvarchar](255),
	@TrackbackBlogName [nvarchar](255),
	@TrackbackExcerpt [ntext],
	@AnonymousName [nvarchar](255),
	@AnonymousEmail [nvarchar](255),
	@AnonymousURL [nvarchar](255),
	@NotifyMe [bit],
	@IsApproved [bit],
	@ApprovedBy [int]
WITH EXECUTE AS CALLER
AS
INSERT INTO dbo.GcDesign_NewsArticles_Comment (
	[ArticleID],
	[CreatedDate], 
	[UserID], 
	[Comment],
	[RemoteAddress],
	[Type],
	[TrackbackUrl],
	[TrackbackTitle],
	[TrackbackBlogName],
	[TrackbackExcerpt],
	[AnonymousName], 
	[AnonymousEmail],
	[AnonymousURL],
	[NotifyMe],
	[IsApproved],
	[ApprovedBy]
) VALUES (
	@ArticleID,
	@CreatedDate, 
	@UserID, 
	@Comment,
	@RemoteAddress,
	@Type,
	@TrackbackUrl,
	@TrackbackTitle,
	@TrackbackBlogName,
	@TrackbackExcerpt,
	@AnonymousName,
	@AnonymousEmail,
	@AnonymousURL,
	@NotifyMe,
	@IsApproved,
	@ApprovedBy  
)

