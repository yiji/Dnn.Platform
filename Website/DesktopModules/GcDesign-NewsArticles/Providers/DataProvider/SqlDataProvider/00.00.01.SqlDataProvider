	dbo.GcDesign_NewsArticles_File
SET
	[ArticleID] = @ArticleID,
	[Title] = @Title,
	[FileName] = @FileName,
	[Extension] = @Extension,
	[Size] = @Size,
	[ContentType] = @ContentType,
	[Folder] = @Folder,
	[SortOrder] = @SortOrder,
	[FileGuid] = @FileGuid
WHERE
	[FileID] = @FileID' 
    END
