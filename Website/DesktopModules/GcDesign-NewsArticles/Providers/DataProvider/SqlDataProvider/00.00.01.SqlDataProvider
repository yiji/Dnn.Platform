GO
IF NOT EXISTS ( SELECT  *
                FROM    sys.objects
                WHERE   object_id = OBJECT_ID(N'[dbo].[GcDesign_NewsArticles_RatingAdd]')
                        AND type IN ( N'P', N'PC' ) )
    BEGIN
