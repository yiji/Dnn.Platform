SET QUOTED_IDENTIFIER ON
GO
IF NOT EXISTS ( SELECT  *
                FROM    sys.objects
                WHERE   object_id = OBJECT_ID(N'[dbo].[GcDesign_NewsArticles_FileList]')
                        AND type IN ( N'P', N'PC' ) )
    BEGIN
        EXEC dbo.sp_executesql @statement = N'CREATE PROCEDURE [dbo].[GcDesign_NewsArticles_FileList]
	@ArticleID [int],
	@FileGuid [nvarchar](50)
WITH EXECUTE AS CALLER
AS
SELECT     
	FileID, 
	ArticleID, 
	Title, 
	FileName, 
	Extension, 
	Size, 
	ContentType, 
	Folder, 
	SortOrder, 
	FileGuid
FROM         
	dbo.GcDesign_NewsArticles_File 
WHERE
	(@ArticleID IS NULL OR ArticleID = @ArticleID) 
	AND
	(@FileGuid IS NULL OR FileGuid = @FileGuid) 
ORDER BY 
	SortOrder' 
    END
