                WHERE   object_id = OBJECT_ID(N'[dbo].[FK_GcDesign_NewsArticles_Comment_GcDesign_NewsArticles_Article]')
                        AND parent_object_id = OBJECT_ID(N'[dbo].[GcDesign_NewsArticles_Comment]') )
    ALTER TABLE [dbo].[GcDesign_NewsArticles_Comment]  WITH NOCHECK ADD  CONSTRAINT [FK_GcDesign_NewsArticles_Comment_GcDesign_NewsArticles_Article] FOREIGN KEY([ArticleID])
    REFERENCES [dbo].[GcDesign_NewsArticles_Article] ([ArticleID])
    ON DELETE CASCADE
    NOT FOR REPLICATION
GO
IF EXISTS ( SELECT  *
            FROM    sys.foreign_keys
            WHERE   object_id = OBJECT_ID(N'[dbo].[FK_GcDesign_NewsArticles_Comment_GcDesign_NewsArticles_Article]')
                    AND parent_object_id = OBJECT_ID(N'[dbo].[GcDesign_NewsArticles_Comment]') )
    ALTER TABLE [dbo].[GcDesign_NewsArticles_Comment] CHECK CONSTRAINT [FK_GcDesign_NewsArticles_Comment_GcDesign_NewsArticles_Article]
GO
/****** Object:  ForeignKey [FK_GcDesign_NewsArticles_Page_GcDesign_NewsArticles_Article]    Script Date: 04/19/2015 21:16:02 ******/
IF NOT EXISTS ( SELECT  *
                FROM    sys.foreign_keys
                WHERE   object_id = OBJECT_ID(N'[dbo].[FK_GcDesign_NewsArticles_Page_GcDesign_NewsArticles_Article]')
                        AND parent_object_id = OBJECT_ID(N'[dbo].[GcDesign_NewsArticles_Page]') )
    ALTER TABLE [dbo].[GcDesign_NewsArticles_Page]  WITH NOCHECK ADD  CONSTRAINT [FK_GcDesign_NewsArticles_Page_GcDesign_NewsArticles_Article] FOREIGN KEY([ArticleID])
    REFERENCES [dbo].[GcDesign_NewsArticles_Article] ([ArticleID])
    ON DELETE CASCADE
GO
IF EXISTS ( SELECT  *
            FROM    sys.foreign_keys
            WHERE   object_id = OBJECT_ID(N'[dbo].[FK_GcDesign_NewsArticles_Page_GcDesign_NewsArticles_Article]')
                    AND parent_object_id = OBJECT_ID(N'[dbo].[GcDesign_NewsArticles_Page]') )
    ALTER TABLE [dbo].[GcDesign_NewsArticles_Page] CHECK CONSTRAINT [FK_GcDesign_NewsArticles_Page_GcDesign_NewsArticles_Article]
GO

CREATE FUNCTION [dbo].[Ventrian_Searches_SplitTags](@ArticleID [int])
RETURNS [nvarchar](2000) WITH EXECUTE AS CALLER
AS 
BEGIN
 
    DECLARE @p_str nvarchar(2000)
    SET @p_str = ''

    SELECT @p_str = @p_str + ',' + CAST(t.[Name] AS NVARCHAR(50))
      FROM dbo.GcDesign_NewsArticles_Tag t, dbo.GcDesign_NewsArticles_ArticleTag at
     WHERE t.TagID = at.TagID and at.ArticleID = @ArticleID
     
    IF( LEN(@p_str) > 0 ) 
	BEGIN
		SELECT @p_str = SUBSTRING(@p_str, 2, (LEN(@p_str)-1)) 
	END

    RETURN LTRIM(@p_str)

END
