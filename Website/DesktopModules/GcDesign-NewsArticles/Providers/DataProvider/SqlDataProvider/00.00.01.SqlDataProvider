/****** Object:  StoredProcedure [dbo].[GcDesign_NewsArticles_AddArticle]    Script Date: 04/19/2015 21:16:00 ******/
SET ANSI_NULLS ON
GO
SET QUOTED_IDENTIFIER ON
GO
IF NOT EXISTS ( SELECT  *
                FROM    sys.objects
                WHERE   object_id = OBJECT_ID(N'[dbo].[GcDesign_NewsArticles_AddArticle]')
                        AND type IN ( N'P', N'PC' ) )
    BEGIN
        EXEC dbo.sp_executesql @statement = N'CREATE PROCEDURE [dbo].[GcDesign_NewsArticles_AddArticle]
	@AuthorID [int],
	@ApproverID [int],
	@CreatedDate [datetime],
	@LastUpdate [datetime],
	@Title [nvarchar](255),
	@Summary [ntext],
	@IsApproved [bit],
	@NumberOfViews [int],
	@IsDraft [bit],
	@StartDate [datetime],
	@EndDate [datetime],
	@ModuleID [int],
	@ImageUrl [nvarchar](255),
	@IsFeatured [bit],
	@LastUpdateID [int],
	@Url [nvarchar](255),
	@IsSecure [bit],
	@IsNewWindow [bit],
	@MetaTitle [nvarchar](200),
	@MetaDescription [nvarchar](500),
	@MetaKeywords [nvarchar](500),
	@PageHeadText [nvarchar](500),
	@ShortUrl [nvarchar](50),
	@RssGuid [nvarchar](255)
WITH EXECUTE AS CALLER
AS
INSERT INTO dbo.GcDesign_NewsArticles_Article (
	[AuthorID],
	[ApproverID],
	[CreatedDate],
	[LastUpdate],
	[Title],
	[Summary],
	[IsApproved],
	[NumberOfViews],
	[IsDraft],
	[StartDate],
	[EndDate],
	[ModuleID],
	[ImageUrl],
	[IsFeatured], 
	[LastUpdateID], 
	[Url],
	[IsSecure],
	[IsNewWindow],
	[MetaTitle],
	[MetaDescription],
	[MetaKeywords],
	[PageHeadText],
	[ShortUrl],
	[RssGuid]  
) VALUES (
	@AuthorID,
	@ApproverID,
	@CreatedDate,
	@LastUpdate,
	@Title,
	@Summary,
	@IsApproved,
	@NumberOfViews,
	@IsDraft,
	@StartDate,
	@EndDate,
	@ModuleID,
	@ImageUrl,
	@IsFeatured,
	@LastUpdateID,
	@Url,
	@IsSecure,
	@IsNewWindow,
	@MetaTitle,
	@MetaDescription,
	@MetaKeywords,
	@PageHeadText,
	@ShortUrl,
	@RssGuid      
)

select SCOPE_IDENTITY()

UPDATE dbo.GcDesign_NewsArticles_Article
SET [PageCount] = (select count(*) from dbo.GcDesign_NewsArticles_Page Page where Page.ArticleID = dbo.GcDesign_NewsArticles_Article.ArticleID)
WHERE ArticleID = SCOPE_IDENTITY()

UPDATE dbo.GcDesign_NewsArticles_Article
SET [CommentCount] = (select count(*) from dbo.GcDesign_NewsArticles_Comment Comment where Comment.ArticleID = dbo.GcDesign_NewsArticles_Article.ArticleID and Comment.IsApproved = 1)
WHERE ArticleID = SCOPE_IDENTITY()

UPDATE dbo.GcDesign_NewsArticles_Article
SET [Rating] = (select AVG(rating) from dbo.GcDesign_NewsArticles_Rating Rating where Rating.ArticleID = dbo.GcDesign_NewsArticles_Article.ArticleID)
WHERE [ArticleID] = SCOPE_IDENTITY() 

UPDATE dbo.GcDesign_NewsArticles_Article
SET [RatingCount] = (select COUNT(*) from dbo.GcDesign_NewsArticles_Rating Rating where Rating.ArticleID = dbo.GcDesign_NewsArticles_Article.ArticleID)
WHERE [ArticleID] = SCOPE_IDENTITY() 

UPDATE dbo.GcDesign_NewsArticles_Article
SET [ImageCount] = (select COUNT(*) from dbo.GcDesign_NewsArticles_Image i where i.ArticleID = dbo.GcDesign_NewsArticles_Article.ArticleID)
WHERE [ArticleID] = SCOPE_IDENTITY() 

UPDATE dbo.GcDesign_NewsArticles_Article
SET [FileCount] = (select COUNT(*) from dbo.GcDesign_NewsArticles_File f where f.ArticleID = dbo.GcDesign_NewsArticles_Article.ArticleID)
WHERE [ArticleID] = SCOPE_IDENTITY()' 
    END
GO
/****** Object:  StoredProcedure [dbo].[GcDesign_NewsArticles_DeletePage]    Script Date: 04/19/2015 21:16:00 ******/
SET ANSI_NULLS ON
GO
SET QUOTED_IDENTIFIER ON
GO
IF NOT EXISTS ( SELECT  *
                FROM    sys.objects
                WHERE   object_id = OBJECT_ID(N'[dbo].[GcDesign_NewsArticles_DeletePage]')
                        AND type IN ( N'P', N'PC' ) )
    BEGIN
        EXEC dbo.sp_executesql @statement = N'CREATE PROCEDURE [dbo].[GcDesign_NewsArticles_DeletePage]
	@PageID [int]
WITH EXECUTE AS CALLER
AS
DECLARE @ArticleID int
SELECT @ArticleID = ArticleID FROM dbo.GcDesign_NewsArticles_Page WHERE [PageID] = @PageID

DELETE FROM dbo.GcDesign_NewsArticles_Page
WHERE
	[PageID] = @PageID

UPDATE dbo.GcDesign_NewsArticles_Article
SET [PageCount] = (select count(*) from dbo.GcDesign_NewsArticles_Page Page where Page.ArticleID = dbo.GcDesign_NewsArticles_Article.ArticleID)
WHERE ArticleID = @ArticleID' 
    END
GO
