      CaptionHelp, 
      IsRequired, 
      IsVisible, 
      SortOrder, 
      ValidationType, 
    RegularExpression, 
      [Length]
FROM         
      dbo.GcDesign_NewsArticles_CustomField
WHERE
      [ModuleID] = @ModuleID
ORDER BY
	SortOrder' 
    END
GO
