/****** Object:  StoredProcedure [dbo].[GcDesign_NewsArticles_GetAuthorList]    Script Date: 04/19/2015 21:16:00 ******/
SET ANSI_NULLS ON
GO
SET QUOTED_IDENTIFIER ON
GO
IF NOT EXISTS ( SELECT  *
                FROM    sys.objects
                WHERE   object_id = OBJECT_ID(N'[dbo].[GcDesign_NewsArticles_GetAuthorList]')
                        AND type IN ( N'P', N'PC' ) )
    BEGIN
        EXEC dbo.sp_executesql @statement = N'CREATE PROCEDURE [dbo].[GcDesign_NewsArticles_GetAuthorList]
	@ModuleID [int]
WITH EXECUTE AS CALLER
AS
SELECT DISTINCT 
	Authors.UserID, 
	Authors.Username, 
	Authors.FirstName, 
	Authors.LastName,
	Authors.DisplayName 

FROM         
	dbo.GcDesign_NewsArticles_Article Articles, dbo.Users Authors

WHERE
	Articles.AuthorID = Authors.UserID
	and
	Articles.ModuleID = @ModuleID
	and 
	Articles.IsApproved = 1

ORDER BY
	Authors.FirstName, Authors.LastName' 
    END
GO
/****** Object:  StoredProcedure [dbo].[GcDesign_NewsArticles_RatingDelete]    Script Date: 04/19/2015 21:16:00 ******/
SET ANSI_NULLS ON
GO
SET QUOTED_IDENTIFIER ON
GO
IF NOT EXISTS ( SELECT  *
                FROM    sys.objects
                WHERE   object_id = OBJECT_ID(N'[dbo].[GcDesign_NewsArticles_RatingDelete]')
                        AND type IN ( N'P', N'PC' ) )
    BEGIN
        EXEC dbo.sp_executesql @statement = N'CREATE PROCEDURE [dbo].[GcDesign_NewsArticles_RatingDelete]
	@RatingID [int]
WITH EXECUTE AS CALLER
AS
DECLARE @ArticleID int
SELECT @ArticleID = ArticleID FROM dbo.GcDesign_NewsArticles_Rating WHERE [RatingID] = @RatingID

DELETE FROM dbo.GcDesign_NewsArticles_Rating
WHERE [RatingID] = @RatingID

UPDATE dbo.GcDesign_NewsArticles_Article
SET [Rating] = (select AVG(rating) from dbo.GcDesign_NewsArticles_Rating Rating where Rating.ArticleID = dbo.GcDesign_NewsArticles_Article.ArticleID)
WHERE [ArticleID] = @ArticleID 

UPDATE dbo.GcDesign_NewsArticles_Article
SET [RatingCount] = (select COUNT(*) from dbo.GcDesign_NewsArticles_Rating Rating where Rating.ArticleID = dbo.GcDesign_NewsArticles_Article.ArticleID)
WHERE [ArticleID] = @ArticleID' 
    END
GO
/****** Object:  StoredProcedure [dbo].[GcDesign_NewsArticles_RatingAdd]    Script Date: 04/19/2015 21:16:00 ******/
SET ANSI_NULLS ON
