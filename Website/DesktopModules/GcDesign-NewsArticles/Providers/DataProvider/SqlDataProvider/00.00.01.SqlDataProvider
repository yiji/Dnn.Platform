/****** Object:  StoredProcedure [dbo].[GcDesign_NewsArticles_ArticleTagDelete]    Script Date: 04/19/2015 21:16:00 ******/
SET ANSI_NULLS ON
GO
SET QUOTED_IDENTIFIER ON
GO
IF NOT EXISTS ( SELECT  *
                FROM    sys.objects
                WHERE   object_id = OBJECT_ID(N'[dbo].[GcDesign_NewsArticles_ArticleTagDelete]')
                        AND type IN ( N'P', N'PC' ) )
    BEGIN
        EXEC dbo.sp_executesql @statement = N'CREATE PROCEDURE [dbo].[GcDesign_NewsArticles_ArticleTagDelete]
	@ArticleID [int]
WITH EXECUTE AS CALLER
AS
UPDATE 
	dbo.GcDesign_NewsArticles_Tag 
SET
	Usages = Usages - 1
WHERE
	TagID in (SELECT pt.TagID from dbo.GcDesign_NewsArticles_ArticleTag pt where ArticleID = @ArticleID)

DELETE FROM dbo.GcDesign_NewsArticles_Tag 
WHERE Usages = 0

DELETE FROM dbo.GcDesign_NewsArticles_ArticleTag 
WHERE ArticleID = @ArticleID' 
    END
GO
/****** Object:  StoredProcedure [dbo].[GcDesign_NewsArticles_ArticleTagAdd]    Script Date: 04/19/2015 21:16:00 ******/
SET ANSI_NULLS ON
GO
SET QUOTED_IDENTIFIER ON
GO
IF NOT EXISTS ( SELECT  *
                FROM    sys.objects
                WHERE   object_id = OBJECT_ID(N'[dbo].[GcDesign_NewsArticles_ArticleTagAdd]')
                        AND type IN ( N'P', N'PC' ) )
    BEGIN
        EXEC dbo.sp_executesql @statement = N'CREATE PROCEDURE [dbo].[GcDesign_NewsArticles_ArticleTagAdd]
	@ArticleID [int],
	@TagID [int]
WITH EXECUTE AS CALLER
AS
IF( (SELECT COUNT(*) FROM dbo.GcDesign_NewsArticles_ArticleTag WHERE ArticleID = @ArticleID and TagID = @TagID) = 0 )
BEGIN
	INSERT INTO 
		dbo.GcDesign_NewsArticles_ArticleTag(ArticleID, TagID)
	VALUES(@ArticleID, @TagID) 

	UPDATE
		dbo.GcDesign_NewsArticles_Tag
	SET
		Usages = (select count(*) from dbo.GcDesign_NewsArticles_ArticleTag pt where pt.TagID = @TagID) 
	WHERE
		TagID = @TagID
END' 
    END
GO
