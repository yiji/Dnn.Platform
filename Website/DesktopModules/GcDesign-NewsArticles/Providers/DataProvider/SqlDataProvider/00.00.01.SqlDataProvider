/****** Object:  StoredProcedure [dbo].[GcDesign_NewsArticles_AddPage]    Script Date: 04/19/2015 21:16:00 ******/
SET ANSI_NULLS ON
GO
SET QUOTED_IDENTIFIER ON
GO
IF NOT EXISTS ( SELECT  *
                FROM    sys.objects
                WHERE   object_id = OBJECT_ID(N'[dbo].[GcDesign_NewsArticles_AddPage]')
                        AND type IN ( N'P', N'PC' ) )
    BEGIN
        EXEC dbo.sp_executesql @statement = N'CREATE PROCEDURE [dbo].[GcDesign_NewsArticles_AddPage]
	@ArticleID [int],
	@Title [nvarchar](255),
	@PageText [nvarchar](max),
	@SortOrder [int]
WITH EXECUTE AS CALLER
AS
declare @count int

select @count = (select count(*) from dbo.GcDesign_NewsArticles_Page where ArticleID = @ArticleID)

INSERT INTO dbo.GcDesign_NewsArticles_Page (
	[ArticleID],
	[Title],
	[PageText],
	[SortOrder]
) VALUES (
	@ArticleID,
	@Title,
	@PageText,
	@count
)

select SCOPE_IDENTITY()

UPDATE dbo.GcDesign_NewsArticles_Article
SET [PageCount] = (select count(*) from dbo.GcDesign_NewsArticles_Page Page where Page.ArticleID = dbo.GcDesign_NewsArticles_Article.ArticleID)
WHERE ArticleID = @ArticleID' 
    END
