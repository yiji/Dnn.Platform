/****** Object:  StoredProcedure [dbo].[GcDesign_NewsArticles_TagList]    Script Date: 04/19/2015 21:16:00 ******/
SET ANSI_NULLS ON
GO
SET QUOTED_IDENTIFIER ON
GO
IF NOT EXISTS ( SELECT  *
                FROM    sys.objects
                WHERE   object_id = OBJECT_ID(N'[dbo].[GcDesign_NewsArticles_TagList]')
                        AND type IN ( N'P', N'PC' ) )
    BEGIN
        EXEC dbo.sp_executesql @statement = N'CREATE PROCEDURE [dbo].[GcDesign_NewsArticles_TagList]
	@ModuleID [int],
	@MaxCount [int]
WITH EXECUTE AS CALLER
AS
if( @MaxCount is not null )
begin
	SET ROWCOUNT @MaxCount 
end

SELECT
	t.[TagID],
	t.[ModuleID],
	t.[Name],
	t.[NameLowered],
	t.[Usages] 
FROM 
	dbo.GcDesign_NewsArticles_Tag t
WHERE
	t.[ModuleID] = @ModuleID
ORDER BY 
	t.[Usages] DESC' 
    END
GO
