/****** Object:  StoredProcedure [dbo].[GcDesign_NewsArticles_UpdateArticle]    Script Date: 04/19/2015 21:16:00 ******/
SET ANSI_NULLS ON
GO
SET QUOTED_IDENTIFIER ON
GO
IF NOT EXISTS ( SELECT  *
                FROM    sys.objects
                WHERE   object_id = OBJECT_ID(N'[dbo].[GcDesign_NewsArticles_UpdateArticle]')
                        AND type IN ( N'P', N'PC' ) )
    BEGIN
        EXEC dbo.sp_executesql @statement = N'CREATE PROCEDURE [dbo].[GcDesign_NewsArticles_UpdateArticle]
	@ArticleID [int],
	@AuthorID [int],
	@ApproverID [int],
	@CreatedDate [datetime],
	@LastUpdate [datetime],
	@Title [nvarchar](255),
	@Summary [ntext],
	@IsApproved [bit],
	@NumberOfViews [int],
	@IsDraft [bit],
	@StartDate [datetime],
	@EndDate [datetime],
	@ModuleID [int],
	@ImageUrl [nvarchar](255),
	@IsFeatured [bit],
	@LastUpdateID [int],
	@Url [nvarchar](255),
	@IsSecure [bit],
	@IsNewWindow [bit],
	@MetaTitle [nvarchar](200),
	@MetaDescription [nvarchar](500),
	@MetaKeywords [nvarchar](500),
	@PageHeadText [nvarchar](500),
	@ShortUrl [nvarchar](50),
	@RssGuid [nvarchar](255)
WITH EXECUTE AS CALLER
AS
UPDATE dbo.GcDesign_NewsArticles_Article SET
	[AuthorID] = @AuthorID,
	[ApproverID] = @ApproverID,
	[CreatedDate] = @CreatedDate,
	[LastUpdate] = @LastUpdate,
	[Title] = @Title,
	[Summary] = @Summary,
	[IsApproved] = @IsApproved,
	[NumberOfViews] = @NumberOfViews,
	[IsDraft] = @IsDraft,
	[StartDate] = @StartDate,
	[EndDate] = @EndDate,
	[ModuleID] = @ModuleID,
	[ImageUrl] = @ImageUrl,
	[IsFeatured] = @IsFeatured, 
	[LastUpdateID] = @LastUpdateID, 
	[Url] = @Url,
	[IsSecure] = @IsSecure,
	[IsNewWindow] = @IsNewWindow,
	[MetaTitle] = @MetaTitle,
	[MetaDescription] = @MetaDescription,
	[MetaKeywords] = @MetaKeywords,
	[PageHeadText] = @PageHeadText,
	[ShortUrl] = @ShortUrl,
	[RssGuid] = @RssGuid      
WHERE
	[ArticleID] = @ArticleID

UPDATE dbo.GcDesign_NewsArticles_Article
SET [PageCount] = (select count(*) from dbo.GcDesign_NewsArticles_Page Page where Page.ArticleID = dbo.GcDesign_NewsArticles_Article.ArticleID)
WHERE ArticleID = @ArticleID

UPDATE dbo.GcDesign_NewsArticles_Article
SET [CommentCount] = (select count(*) from dbo.GcDesign_NewsArticles_Comment Comment where Comment.ArticleID = dbo.GcDesign_NewsArticles_Article.ArticleID and Comment.IsApproved = 1)
WHERE ArticleID = @ArticleID

UPDATE dbo.GcDesign_NewsArticles_Article
SET [Rating] = (select AVG(rating) from dbo.GcDesign_NewsArticles_Rating Rating where Rating.ArticleID = dbo.GcDesign_NewsArticles_Article.ArticleID)
WHERE [ArticleID] = @ArticleID

UPDATE dbo.GcDesign_NewsArticles_Article
SET [RatingCount] = (select COUNT(*) from dbo.GcDesign_NewsArticles_Rating Rating where Rating.ArticleID = dbo.GcDesign_NewsArticles_Article.ArticleID)
WHERE [ArticleID] = @ArticleID

UPDATE dbo.GcDesign_NewsArticles_Article
SET [ImageCount] = (select COUNT(*) from dbo.GcDesign_NewsArticles_Image i where i.ArticleID = dbo.GcDesign_NewsArticles_Article.ArticleID)
WHERE [ArticleID] = @ArticleID 

UPDATE dbo.GcDesign_NewsArticles_Article
SET [FileCount] = (select COUNT(*) from dbo.GcDesign_NewsArticles_File f where f.ArticleID = dbo.GcDesign_NewsArticles_Article.ArticleID)
WHERE [ArticleID] = @ArticleID' 
    END
GO
/****** Object:  StoredProcedure [dbo].[GcDesign_NewsArticles_UpdateComment]    Script Date: 04/19/2015 21:16:00 ******/
SET ANSI_NULLS ON
GO
SET QUOTED_IDENTIFIER ON
GO
IF NOT EXISTS ( SELECT  *
                FROM    sys.objects
                WHERE   object_id = OBJECT_ID(N'[dbo].[GcDesign_NewsArticles_UpdateComment]')
                        AND type IN ( N'P', N'PC' ) )
