ALTER TABLE {databaseOwner}{objectQualifier}GcDesign_Searches_Article
	DROP CONSTRAINT FK_{objectQualifier}GcDesign_Searches_Article_{objectQualifier}Users
GO

ALTER TABLE {databaseOwner}{objectQualifier}GcDesign_Searches_Article
	DROP CONSTRAINT FK_{objectQualifier}GcDesign_Searches_Article_Modules
GO

CREATE TABLE {databaseOwner}{objectQualifier}Tmp_GcDesign_Searches_Article
	(
	ArticleID int NOT NULL IDENTITY (1, 1),
	AuthorID int NOT NULL,
	ApproverID int NULL,
	CreatedDate datetime NOT NULL,
	LastUpdate datetime NOT NULL,
	Title nvarchar(255) NOT NULL,
	Summary ntext NOT NULL,
	IsApproved bit NOT NULL,
	NumberOfViews int NOT NULL,
	IsDraft bit NOT NULL,
	StartDate datetime NULL,
	EndDate datetime NULL,
	ModuleID int NULL,
	ImageUrl nvarchar(255) NULL,
	IsFeatured bit NOT NULL
	)  ON [PRIMARY]
	 TEXTIMAGE_ON [PRIMARY]
GO

SET IDENTITY_INSERT {databaseOwner}{objectQualifier}Tmp_GcDesign_Searches_Article ON
GO

IF EXISTS(SELECT * FROM {databaseOwner}{objectQualifier}GcDesign_Searches_Article)
	 EXEC('INSERT INTO {databaseOwner}{objectQualifier}Tmp_GcDesign_Searches_Article (ArticleID, AuthorID, ApproverID, CreatedDate, LastUpdate, Title, Summary, IsApproved, NumberOfViews, IsDraft, StartDate, EndDate, ModuleID, ImageUrl, IsFeatured)
		SELECT ArticleID, AuthorID, ApproverID, CreatedDate, LastUpdate, Title, CONVERT(ntext, Summary), IsApproved, NumberOfViews, IsDraft, StartDate, EndDate, ModuleID, ImageUrl, IsFeatured FROM {databaseOwner}{objectQualifier}GcDesign_Searches_Article (HOLDLOCK TABLOCKX)')
GO

SET IDENTITY_INSERT {databaseOwner}{objectQualifier}Tmp_GcDesign_Searches_Article OFF
GO

ALTER TABLE {databaseOwner}{objectQualifier}GcDesign_Searches_ArticleCategories
	DROP CONSTRAINT FK_{objectQualifier}GcDesign_Searches_ArticleCategories_GcDesign_Searches_Article
