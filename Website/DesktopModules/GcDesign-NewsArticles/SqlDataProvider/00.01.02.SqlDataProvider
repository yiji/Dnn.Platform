GO

DROP TABLE {databaseOwner}{objectQualifier}GcDesign_Searches_Article
GO

EXECUTE sp_rename N'{objectQualifier}Tmp_GcDesign_Searches_Article', N'{objectQualifier}GcDesign_Searches_Article', 'OBJECT'
GO

